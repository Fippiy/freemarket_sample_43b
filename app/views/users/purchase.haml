- breadcrumb :purchase
.purchase-item
  .purchase-item__box
    .purchase-item__box--main
      %h1 購入した商品
      %ul.select
        %li.select__tag
          = link_to "取引中", "", class: "active"
        %li.select__tag
          = link_to "過去の取引", purchased_users_path, class: "differ"
      - if @items.length == 0
        = image_tag "logo-gray-icon.svg", class: "logo"
        %h2取引中の商品がありません
      %ul.show
        - if @items.length >= 1
          = render partial: "purchase"

    = render partial: 'user_side_bar'
